{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Topology Configuration",
  "type": "object",
  "properties": {
    "peers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "endpoint": { "type": "string" },
          "allowed_ips": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["from", "to", "endpoint", "allowed_ips"]
      }
    }
  },
  "required": ["peers"]
}